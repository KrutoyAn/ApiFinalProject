<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.hfad.apifinalproject.CustomView
        android:id="@+id/custom_view_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:custom_color_one="#F44336"
        app:custom_style="stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hfad.apifinalproject.CustomView
        android:id="@+id/custom_view_two"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:custom_color_one="#FFEB3B"
        app:custom_style="fill"
        app:layout_constraintEnd_toEndOf="@+id/custom_view_one"
        app:layout_constraintStart_toStartOf="@+id/custom_view_one"
        app:layout_constraintTop_toBottomOf="@+id/custom_view_one" />

    <com.hfad.apifinalproject.CustomView
        android:id="@+id/custom_view_three"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        app:custom_color_one="#4CAF50"
        app:custom_style="stroke"
        app:layout_constraintEnd_toEndOf="@+id/custom_view_two"
        app:layout_constraintStart_toStartOf="@+id/custom_view_two"
        app:layout_constraintTop_toBottomOf="@+id/custom_view_two" />

</androidx.constraintlayout.widget.ConstraintLayout>